<%- include("header") -%>
<body>
    <div class="box" id="heading">
        <h1><%= listType %></h1>
    </div>
    
    <div class="box">
        
            <%newItem.forEach(function(item){%>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" onchange="this.form.submit()" name="delete" value=<%= item.id + '+' + collection %>>
                    <p><%= item.name %> </p>
                </div>
            </form>
            <%})%>
       
       
       
        <form action="/" method="post" class="item">
            <input type="text" name="listItem" autocomplete="off" placeholder="New Item">
            <button type="submit" name="type" value=<%= listType %>>
                +
            </button>
        </form>
       
    </div>
   
</body>
</html>